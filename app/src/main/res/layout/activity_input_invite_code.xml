<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.register.InputInviteCodeActivity">

        <ImageButton
            android:id="@+id/btn_input_close"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:layout_marginStart="319dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />



        <TextView
            android:id="@+id/tv_input_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_input_code"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_input_close" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edt_input_code"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="36dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="316dp"
            android:background="@drawable/ic_rectangle_radius_16_grey"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_input_code" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>